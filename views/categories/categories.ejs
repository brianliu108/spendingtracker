<%- include('../layouts/header') %>
<body>
    <main>
        <h1>Categories</h1>
        <a href="/categories/add">New Category</a>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < categories.length; i++){ %>
                    <tr>
                        <td><%= categories[i].categoryName %></td>
                        <td><%= categories[i].typeName %></td>
                        <td><a href="/categories/edit/<%= categories[i].categoryId %>">Edit</a> |
                            <a href="/categories/delete/<%= categories[i].categoryId %>">Delete</a></td>
                    </tr>
                <% } %>
                
            </tbody>
        </table>
    </main>    
    
</body>
<%- include('../layouts/footer') %>